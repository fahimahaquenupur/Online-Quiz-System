<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #E6E6FA;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bd.edu.seu.onlinequiz.controllers.TakeQuizController">
   <children>
      <Label fx:id="quizTitleLabel" layoutX="386.0" layoutY="32.0" textFill="MAROON">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Label fx:id="timerLabel" layoutX="712.0" layoutY="40.0" textFill="MAROON">
         <font>
            <Font size="14.0" />
         </font></Label>
      <Label fx:id="questionNumberLabel" layoutX="39.0" layoutY="146.0">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <Label fx:id="questionTextLabel" layoutX="158.0" layoutY="146.0">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <RadioButton fx:id="optionARadio" layoutX="42.0" layoutY="179.0" mnemonicParsing="false">
         <toggleGroup>
            <ToggleGroup fx:id="singleChoiceGroup" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="optionBRadio" layoutX="207.0" layoutY="179.0" mnemonicParsing="false" toggleGroup="$singleChoiceGroup" />
      <RadioButton fx:id="optionCRadio" layoutX="378.0" layoutY="179.0" mnemonicParsing="false" toggleGroup="$singleChoiceGroup" />
      <Button fx:id="previousButton" layoutX="79.0" layoutY="281.0" mnemonicParsing="false" onAction="#previousQuestion" text="Previous">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="nextButton" layoutX="590.0" layoutY="281.0" mnemonicParsing="false" onAction="#nextQuestion" text="Next">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="submitButton" layoutX="358.0" layoutY="393.0" mnemonicParsing="false" onAction="#submitQuiz" text="Submit">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button layoutX="28.0" layoutY="554.0" mnemonicParsing="false" onAction="#backToQuizList" prefHeight="17.0" prefWidth="43.0" text="Exit">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <CheckBox fx:id="optionACheck" layoutX="42.0" layoutY="179.0" mnemonicParsing="false" />
      <CheckBox fx:id="optionBCheck" layoutX="206.0" layoutY="179.0" mnemonicParsing="false" />
      <CheckBox fx:id="optionCCheck" layoutX="378.0" layoutY="179.0" mnemonicParsing="false" />
      <CheckBox fx:id="optionDCheck" layoutX="565.0" layoutY="179.0" mnemonicParsing="false" />
      <RadioButton fx:id="trueRadio" layoutX="42.0" layoutY="179.0" mnemonicParsing="false">
         <toggleGroup>
            <ToggleGroup fx:id="trueFalseGroup" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="falseRadio" layoutX="207.0" layoutY="179.0" mnemonicParsing="false" toggleGroup="$trueFalseGroup" />
      <TextField fx:id="studentIdField" layoutX="37.0" layoutY="92.0" prefHeight="25.0" prefWidth="250.0" promptText="ID" />
      <TextField fx:id="studentNameField" layoutX="400.0" layoutY="92.0" prefHeight="25.0" prefWidth="305.0" promptText="Name" />
      <Label fx:id="statusLabel" layoutX="358.0" layoutY="495.0" textFill="DARKGREEN">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <RadioButton fx:id="optionDRadio" layoutX="565.0" layoutY="179.0" mnemonicParsing="false" toggleGroup="$singleChoiceGroup" />
   </children>
</AnchorPane>
